<UserControl x:Class="Hermle_Auto.ColorCircle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="100" Width="100">

    <UserControl.Resources>
        <!-- 애니메이션 정의 -->
        <Storyboard x:Key="ToRedAnimation">
            <ColorAnimation 
                Storyboard.TargetName="CircleColor"
                Storyboard.TargetProperty="Color"
                To="#FFFF0000" 
                Duration="0:0:0.3"/>
        </Storyboard>

        <Storyboard x:Key="ToGreenAnimation">
            <ColorAnimation 
                Storyboard.TargetName="CircleColor"
                Storyboard.TargetProperty="Color"
                To="#FF00FF00" 
                Duration="0:0:0.3"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <Ellipse x:Name="CircleShape" 
                 Cursor="Hand">
            <Ellipse.Fill>
                <SolidColorBrush x:Name="CircleColor" Color="#FF00FF00"/>
            </Ellipse.Fill>
            <Ellipse.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="3" 
                                Opacity="0.3"/>
            </Ellipse.Effect>
        </Ellipse>
    </Grid>
</UserControl>
